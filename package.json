{
  "name": "international-days-cs",
  "version": "1.0.5",
  "author": "Roman Ožana <roman@ozana.cz> (https://ozana.cz)",
  "repository": "OzzyCzech/international-days-cs",
  "license": "MIT",
  "description": "International and national days in Czech language",
  "keywords": [
    "czechia",
    "czech republic",
    "czech language",
    "international days",
    "mezinárodní dny",
    "národní dny"
  ],
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "release": "np",
    "prepare": "npm run build",
    "build": "yarn convert && yarn clean && tsc",
    "test": "xo && tsc --noEmit && NODE_OPTIONS='--import=tsx/esm' ava",
    "ava": "NODE_OPTIONS='--import=tsx/esm' ava",
    "convert": "js-yaml data/international-days.yaml > lib/international-days.json",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.0",
    "ava": "^6.1.3",
    "js-yaml": "^4.1.0",
    "luxon": "^3.5.0",
    "np": "^10.0.7",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "xo": "^0.59.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "test/*"
    ],
    "workerThreads": false,
    "nodeArguments": [
      "--experimental-json-modules",
      "--no-warnings"
    ]
  }
}
